{
  "name": "pulso",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --filter=@pulso/api --filter=@pulso/web",
    "mobile": "turbo run start --filter=@pulso/mobile",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
